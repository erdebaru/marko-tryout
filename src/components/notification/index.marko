static var CONTEXT_KEY = "__subtree_context__";
static function getProvider(out, provider) {
  return out[CONTEXT_KEY] && out[CONTEXT_KEY][provider.___providerId];
}

class {
  onCreate() {
    this.sync = this.sync.bind(this);
  }
  
  onInput(input, out) {
    debugger;
  }

  close(){
    const notificationBar = this.getEl('notification-bar');
    const messageContainer = this.getEl('message');
    notificationBar.classList.add('hidden');
    messageContainer.innerHTML = '';
  }
  show(message = ''){
    const notificationBar = this.getEl('notification-bar');
    const messageContainer = this.getEl('message');
    notificationBar.classList.remove('hidden');
    messageContainer.innerHTML = message;
  }
}
